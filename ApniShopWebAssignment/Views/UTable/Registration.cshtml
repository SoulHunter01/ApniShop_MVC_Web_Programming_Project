@model ApniShopWebAssignment.Models.UTable

@{
    ViewBag.Title = "Registration";
}

<br />
<br />
<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@100&display=swap" rel="stylesheet">
</head>
<div class="row" style="        
        margin: auto;
        width: 40%;
        border: 10px solid rgb(128, 0, 128);
        padding: 10px;
        background: white;
        font-family: 'Public Sans', sans-serif;
">
    <div style="margin: auto; width: 50%; padding: 10px; ">
        <div class="card">
            <div class="card-header">
                <h2 style="text-align:center;">Registration</h2>
            </div>

            <div class="card-body">
                @using (Html.BeginForm("Registration", "UTable", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group" style="text-align: center;">
                        <h4>ID</h4>
                        @Html.EditorFor(model => model.UID, new { htmlAttributes = new { @class = "form-control field" } })
                        @Html.ValidationMessageFor(model => model.UID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="text-align: center;">
                        <h4>Name</h4>
                        @Html.EditorFor(model => model.Uname, new { htmlAttributes = new { @class = "form-control field" } })
                        @Html.ValidationMessageFor(model => model.Uname, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="text-align: center;">
                        <h4>Password</h4>
                        @Html.EditorFor(model => model.UPassword, new { htmlAttributes = new { @class = "form-control field" } })
                        @Html.ValidationMessageFor(model => model.UPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="text-align: center;">
                        <h4>Admin Status</h4>
                        @Html.EditorFor(model => model.UIsAdmin, new { htmlAttributes = new { @class = "form-control field" } })
                        @Html.ValidationMessageFor(model => model.UIsAdmin, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="text-align: center;">
                        <h4>Gender</h4>
                        @Html.EditorFor(model => model.UGender, new { htmlAttributes = new { @class = "form-control field" } })
                        @Html.ValidationMessageFor(model => model.UGender, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="text-align: center;">
                        <h4>Birthday</h4>
                        @Html.EditorFor(model => model.UBirthday, new { htmlAttributes = new { @class = "form-control field" } })
                        @Html.ValidationMessageFor(model => model.UBirthday, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="text-align: center;">
                        <h4>Address</h4>
                        @Html.EditorFor(model => model.UAddress, new { htmlAttributes = new { @class = "form-control field" } })
                        @Html.ValidationMessageFor(model => model.UAddress, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="text-align: center;">
                        <h4>Address</h4>
                        @Html.EditorFor(model => model.UMobileNo, new { htmlAttributes = new { @class = "form-control field" } })
                        @Html.ValidationMessageFor(model => model.UMobileNo, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="text-align: center;">

                        <h4>Picture</h4>
                        <br>
                        <input type="file" name="ImageFile" required>
                    </div>

                    <div class="form-group" style="text-align: center;">
                        <input type="submit" value="Sign Up" class="btn btn-primary btn-lg" />
                    </div>

                    <div class="form-group" style="text-align: center;">
                        <label class="label-success">@ViewBag.SuccessMessage</label>
                    </div>

                    <div class="form-group" style="text-align: center;">
                        <label class="label-success">@ViewBag.ErrorMessage</label>
                    </div>
                </div>

                }
            </div>
        </div>
    </div>
</div>

<style>
    .field {
        border-top-style: none;
        border-right-style: none;
        border-left-style: none;
        border-bottom-style: solid;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}