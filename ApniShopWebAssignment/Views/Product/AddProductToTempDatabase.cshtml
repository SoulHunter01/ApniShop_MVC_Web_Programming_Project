@model ApniShopWebAssignment.Models.UPTable

@{
    ViewBag.Title = "Send Product Request To Admin";
}

<h2 style="text-align: center;">Send Product Request To Admin</h2>

<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@100&display=swap" rel="stylesheet">
</head>
<div class="row" style="        margin: auto;
        width: 40%;
        border: 10px solid rgb(128, 0, 128);
        padding: 10px;
        background: white;
        font-family: 'Public Sans', sans-serif;">
    <div style="margin: auto; width: 50%; padding: 10px; ">
        <div class="card">
            <div class="card-header">
                <h2 style="text-align: center;">User Login</h2>
                <br>
            </div>

            @using (Html.BeginForm("AddProductToTempDatabase", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group" style="text-align: center;">
                        <div class="form-group" style="text-align: center;">
                            <h4>Name</h4>
                            @Html.EditorFor(model => model.UPNAME, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UPNAME, "", new { @class = "text-danger" })
                        </div>
                        </div>

                    <div class="form-group" style="text-align: center;">
                        <div class="form-group" style="text-align: center;">
                            <h4>Image</h4>
                            <input type="file" name="ImageFile" class="btn btn-primary btn-sm" required>
                        </div>
                        </div>

                    <div class="form-group" style="text-align: center;">
                        <div class="form-group" style="text-align: center;">
                            <h4>Category</h4>
                            @Html.EditorFor(model => model.UPCategory, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UPCategory, "", new { @class = "text-danger" })
                        </div>
                        </div>


                    <div class="form-group" style="text-align: center;">
                        <div class="form-group" style="text-align: center;">
                            <h4>Price</h4>
                            @Html.EditorFor(model => model.UPPrice, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UPPrice, "", new { @class = "text-danger" })
                        </div>
                        </div>

                    <div class="form-group" style="text-align: center;">
                        <div class="form-group" style="text-align: center;">
                            <h4>Product ID</h4>
                            @Html.EditorFor(model => model.UPQuantity, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UPQuantity, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="text-align: center;">
              
                            <input type="submit" value="Send Request To Admin" class="btn btn-primary btn-lg" />
                    </div>

                    <div class="form-group" style="text-align: center;">
                        <label class="label-success">@ViewBag.SuccessMessage</label>
                    </div>

                    <div class="form-group" style="text-align: center;">
                        <label class="label-success">@ViewBag.ErrorMessage</label>
                    </div>

                </div>
            }
        </div>
    </div>
</div>
<style>
    .form-control {
        border: 0px none;
    }
</style>
<div>
    @Html.ActionLink("Back to List", "Index",null,null, new { @class = "btn btn-primary btn-lg" })
</div>
